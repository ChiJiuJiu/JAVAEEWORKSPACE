<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.yctc.genesis.dao.CourseDAO">
	<resultMap type="edu.yctc.genesis.entity.CourseDO" id="CourseDO">
		<id column="id" property="id" jdbcType="BIGINT"/>
		<result column="number" property="number"/>
		<result column="name" property="name"/>
		<result column="lesson_sum" property="lesson_sum"/>
		<result column="year" property="year"/>
		<result column="term" property="term"/>
		<result column="profession" property="profession"/>
		<result column="class" property="class"/>
	</resultMap>
	<insert id="insert" parameterType="">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO tb_course(
			number,
			name,
			lesson_sum,
			year,
			term,
			profession,
			class
		) VALUES(
			#{number},
			#{name},
			#{lesson_sum},
			#{year},
			#{term},
			#{profession},
			#{class},
		);
	</insert>
	<select id="getCourseById" parameterType="long" resultMap="CourseDO">
		SELECT
			id,
			number,
			name,
			lesson_sum,
			year,
			term,
			profession,
			class
		FROM tb_course WHERE
			id = #{id}
	</select>
</mapper>