<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.yctc.genesis.dao.PermissionDAO">
	<resultMap type="edu.yctc.genesis.dao.PermissionDO" id="PermissionDO">
		<id column="id" property="id" jdbcType="BIGINT"/>
		<result column="name" property="name"/>
	</resultMap>
	
	<insert id="insert" parameterMap="edu.yctc.genesis.dao.PermissionDO">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO tb_permission(
			name
		)VALUES(
			#{name}
		);
	</insert>
	
	<select id="getPermissionById" parameterType="long" resultMap="PermissionDO">
		SELECT
			id,
			name
		FROM tb_permission WHERE
			id = #{id}
	</select>
</mapper>