<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.yctc.genesis.dao.UserDAO">
	<resultMap id="UserDO" type="edu.yctc.genesis.entity.UserDO">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="number" property="number"/>
		<result column="password" property="password" />
		<result column="name" property="name" />
		<result column="type" property="type" />
		<result column="sex" property="sex" />
		<result column="id_card_number" property="id_card_number" />
		<result column="phone" property="phone" />
		<result column="mail" property="mail" />
		<result column="picture" property="picture" />
		<result column="face_token" property="face_token" />
		<result column="gmt_created" property="gmtCreated" />
		<result column="gmt_modified" property="gmtModified" />
	</resultMap>

	<insert id="insert" parameterType="edu.yctc.genesis.entity.UserDO">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO tb_user(
			name,
			password,
			gmt_created,
			gmt_modified
		) VALUES(
			#{name},
			#{password},
			now(),
			now()
		);
	</insert>

	<select id="getUserById" parameterType="long" resultMap="UserDO">
		SELECT
			id,
			name,
			password,
			gmt_created,
			gmt_modified
		FROM tb_user WHERE
			id=#{id}
	</select>

	<select id="getUserByUsernameAndPassword" resultMap="UserDO">
		SELECT
			id,
			name,
			password,
			gmt_created,
			gmt_modified
		FROM tb_user WHERE
			name=#{name}
		AND
			password=#{password}
	</select>
</mapper>