<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.yctc.genesis.dao.Classroom_stateDAO">
	<resultMap type="edu.yctc.genesis.entity.Classroom_stateDO" id="Classroom_stateDO">
		<id column="id" property="id" jdbcType="BIGINT"/>
		<result column="classroom_id" property="classroom_id"/>
		<result column="lesson_id" property="lesson_id"/>
		<result column="using" property="using"/>
	</resultMap>
	
	<insert id="insert" parameterType="edu.yctc.genesis.entity.Classroom_stateDO">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO tb_classroom_state(
			classroom_id,
			lesson_id,
			using
		) VALUES(
			#{user_id},
			#{lesson_id},
			#{attend_state}
		);
	</insert>
	
	<select id="getAttendacneByUserId" parameterType="long" resultMap="AttendanceDO">
		SELECT
			id,
			user_id,
			lesson_id,
			attend_state
		FROM tb_attendance WHERE
			user_id = #{user_id}
	</select>
</mapper>