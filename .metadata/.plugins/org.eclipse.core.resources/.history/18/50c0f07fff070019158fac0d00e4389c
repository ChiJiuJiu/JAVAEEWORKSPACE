<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.yctc.genesis.dao.ClassroomDAO">
	<resultMap type="edu.yctc.genesis.entity.ClassroomDO" id="ClassroomDO">
		<id column="id" property="id" jdbcType="BIGINT"/>
		<result column="user_id" property="user_id"/>
		<result column="lesson_id" property="lesson_id"/>
		<result column="score" property="score"/>
	</resultMap>
	
	<insert id="insert" parameterType="edu.yctc.genesis.entity.Class_scoreDO">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO tb_class_score(
			user_id,
			lesson_id,
			score
		) VALUES(
			#{user_id},
			#{lesson_id},
			#{score}
		);
	</insert>
	
	<select id="getScoreByUserId" parameterType="long" resultMap="Class_scoreDO">
		SELECT
			id,
			user_id,
			lesson_id,
			score
		FROM tb_class_score WHERE
			user_id = #{user_id}
	</select>
</mapper>