<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.yctc.genesis.dao.Class_scoreDAO">
	<resultMap type="edu.yctc.genesis.entity.Class_scoreDO" id="Class_scoreDO">
		<id column="id" property="id" jdbcType="BIGINT"/>
		<result column="id" property="id"/>
		<result column="user_id" property="user_id"/>
		<result column="lesson_id" property="lesson_id"/>
		<result column="score" property="score"/>
		<result column="rank" property="rank"/>
	</resultMap>
	
	<resultMap type="" id=""></resultMap>
	
	<insert id="insert" parameterType="edu.yctc.genesis.entity.Class_scoreDO">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO tb_class_score(
			user_id,
			lesson_id,
			score
		) VALUES(
			#{user_id},
			#{lesson_id},
			#{score}
		);
	</insert>
	
	<select id="getScoreByUserId" parameterType="long" resultMap="Class_scoreDO">
		SELECT
			id,
			user_id,
			lesson_id,
			score
		FROM tb_class_score WHERE
			user_id = #{user_id}
	</select>
	
	<select id="OrderByScore" parameterType="long" resultMap="Class_scoreDO">
		SELECT * FROM 
			tb_class_score WHERE
			lesson_id = #{lesson_id}
		ORDER BY score DESC
	</select>
</mapper>