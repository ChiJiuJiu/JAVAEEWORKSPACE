<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.yctc.genesis.dao.LessonDAO">
	<resultMap type="edu.yctc.genesis.entity.LessonDO" id="LessonDO">
		<id column="id" property="id" jdbcType="BIGINT"/>
		<result column="course_id" property="course_id"/>
		<result column="number" property="number"/>
		<result column="classroom_id" property="classroom_id"/>
		<result column="begin" property="begin"/>
		<result column="end" property="end"/>
	</resultMap>
	
	<insert id="insert" parameterType="edu.yctu.genesis.entity.LessonDO">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO tb_lesson(
			course_id,
			number,
			classroom_id,
			begin,
			end
		)VALUES(
			#{course_id},
			#{number},
			#{classroom_id},
			NOW(),
			NOW()
		);
	</insert>
	
	<select id="getLessonById" parameterType="long" resultMap="LessonDO">
		SELECT
			id,
			course_id,
			number,
			classroom_id,
			begin,
			end
		FROM tb_lesson WHERE
			id = #{id}
	</select>
	
	<select id="getLessonByStudentId" parameterType="long" resultMap="LessonDO">
		SELECT * FROM tb_lesson WHERE
			tb_lesson.course_id=(
				SELECT
					tb_student_course.course_id
				FROM tb_student_course WHERE
					tb_student_course.user_id = #{user_id}
			)
	</select>
	
	<select id="getLessonByStudentIdAndNumber"  resultMap="LessonDO">
		SELECT * FROM tb_lesson WHERE
			tb_lesson.course_id=(
				SELECT
					tb_student_course.course_id
				FROM tb_student_course WHERE
					tb_student_course.user_id = #{user_id}
			)
			AND tb_lesson.number = #{number}
	</select>
</mapper>