<mapper namespace="edu.yctc.genesis.dao.LessonDO">
	<insert id="insertLesson" parameterType="edu.yctu.genesis.entity.LessonDO">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO tb_lesson(
			course_id,
			number,
			classroom_id,
			begin,
			end
		)VALUES(
			#{course_id},
			#{number},
			#{classroom_id},
			NOW(),
			NOW()
		);
	</insert>
	<select id="getLessonById"></select>
</mapper>