package edu.yctc.genesis.dao;

import org.apache.ibatis.annotations.Mapper;

import edu.yctc.genesis.entity.LessonDO;

@Mapper
public interface LessonDAO {
	/**
	 * 插入一节课
	 * 
	 * @param lessonDO
	 */
	
	public void insert(LessonDO lessonDO);
	
	/**
	 * id查询课时
	 * 
	 * @param  id
	 * @return
	 */
	public LessonDO getLessonById(long id);
	
	/**
     * 用户id查询该学生所有课时
     * 
     * @param user_id
     * @return
     */
    public LessonDO getLessonByStudentId(long user_id);
    
    /**
     * 用户id和课时号查询课时
     * @param user_id
     * @param number
     * @return
     */
    public LessonDO getLessonByUserIdAndNumber(long user_id,int number);
}
