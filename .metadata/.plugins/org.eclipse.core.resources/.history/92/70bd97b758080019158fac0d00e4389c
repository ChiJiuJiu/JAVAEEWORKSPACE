<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.yctc.genesis.dao.Permission_groupDAO">
	<resultMap type="edu.yctc.genesis.entity.Permission_groupDO" id="Permission_groupDO">
		<id column="id" property="id" jdbcType="BIGINT"/>
		<result column="name" property="name"/>
	</resultMap>
	
	<insert id="insert" parameterType="edu.yctc.genesis.dao.Permission_groupDO">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO tb_permission_group(
			name
		)VALUES(
			#{name}
		);
	</insert>
	
	<select id="getGroupById" parameterType="long" resultMap="Permission_groupDO">
		SELECT
			id,
			name
		FROM tb_permission_group WHERE
			id = #{id}
	</select>
</mapper>