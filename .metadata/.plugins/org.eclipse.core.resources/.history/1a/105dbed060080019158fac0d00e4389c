package edu.yctc.genesis.dao;

import org.apache.ibatis.annotations.Mapper;

import edu.yctc.genesis.entity.Student_stateDO;

@Mapper
public interface Student_stateDAO {
	
	/**
	 * 插入学生状态信息
	 * 
	 * @param student_stateDO
	 */
	public void insert(Student_stateDO student_stateDO);
	
	/**
	 * 用户id查询所有课时上课状态信息
	 * 
	 * @param user_id
	 * @return
	 */
	public Student_stateDO getStudentStateByUserId(long user_id);
	
	/**
	 * 用户id课时id查询该用户该课时所有时间段的上课状态
	 * 
	 * @param user_id
	 * @param lesson_id
	 * @return
	 */
	public Student_stateDO getStudentStateByUserIdAndLessonId(long user_id,long lesson_id);
	
	
	public void UpdateStudentState(Student_stateDO student_stateDO);
}
