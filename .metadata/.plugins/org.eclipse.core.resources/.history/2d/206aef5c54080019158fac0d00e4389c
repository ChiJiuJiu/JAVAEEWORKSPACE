<mapper namespace="edu.yctc.genesis.dao.Permission_group_permissionDAO">
	<resultMap type="edu.yctc.genesis.dao.Permission_group_permissionDO" id="Permission_group_permissionDO">
		<id column="id" property="id" jdbcType="BIGINT"/>
		<result column="perimission_group_id" property="permission_group_id"/>
		<result column="permission_id" property="permission_id"/>
	</resultMap>
	
	<insert id="insert" parameterType="edu.yctc.genesis.dao.Permission_group_permissionDO">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO tb_permission_group_permission(
			permission_group_id,
			permission_id
		)VALUES(
			#{permission_group_id},
			#{permission_id}
		);
	</insert>
	
	<select id="getGroupById" parameterType="long" resultMap="Permission_groupDO">
		SELECT
			id,
			name
		FROM tb_permission_group WHERE
			id = #{id}
	</select>
</mapper>